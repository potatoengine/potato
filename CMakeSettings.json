{
  "configurations": [
    {
      "name": "Windows (Debug)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [ "msvc_x64_x64" ],
      "buildRoot": "${projectDir}/out/msvc-debug/build",
      "installRoot": "${projectDir}/out/msvc-debug-shared/root",
      "ctestCommandArgs": "--verbose",
      "environments": [ { "CXXFLAGS": "/W3 /WX /FC" } ],
      "enableClangTidyCodeAnalysis": true,
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "ON",
          "type": "STRING"
        },
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "STRING"
        },
        {
          "name": "UP_BUILD_DOCS",
          "value": "True",
          "type": "BOOL"
        }
      ]
    },
    {
      "name": "Windows (Debug Static)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [ "msvc_x64_x64" ],
      "buildRoot": "${projectDir}/out/msvc-debug-static/build",
      "installRoot": "${projectDir}/out/msvc-debug-static/root",
      "ctestCommandArgs": "--verbose",
      "environments": [ { "CXXFLAGS": "/W3 /WX /FC" } ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "OFF",
          "type": "STRING"
        },
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "STRING"
        }
      ]
    },
    {
      "name": "Windows (Release)",
      "generator": "Ninja",
      "configurationType": "RelWithDebInfo",
      "inheritEnvironments": [ "msvc_x64_x64" ],
      "buildRoot": "${projectDir}/out/msvc-release/build",
      "installRoot": "${projectDir}/out/msvc-release-shared/root",
      "ctestCommandArgs": "--verbose",
      "environments": [ { "CXXFLAGS": "/W3 /WX /FC" } ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "ON",
          "type": "STRING"
        },
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "STRING"
        }
      ]
    },
    {
      "name": "Windows (Release Static)",
      "generator": "Ninja",
      "configurationType": "RelWithDebInfo",
      "inheritEnvironments": [ "msvc_x64_x64" ],
      "buildRoot": "${projectDir}/out/msvc-release-static/build",
      "installRoot": "${projectDir}/out/msvc-release-static/root",
      "ctestCommandArgs": "--verbose",
      "environments": [ { "CXXFLAGS": "/W3 /WX /FC" } ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "OFF",
          "type": "STRING"
        },
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "STRING"
        }
      ]
    },
    {
      "name": "Linux via WSL (Debug Static)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "buildRoot": "${projectDir}/out/wsl-debug-static/build",
      "installRoot": "${projectDir}/out/wsl-debug-static/install",
      "cmakeExecutable": "/usr/bin/cmake",
      "cmakeCommandArgs": "",
      "buildCommandArgs": "",
      "ctestCommandArgs": "--verbose",
      "inheritEnvironments": [ "linux_x64" ],
      "wslPath": "${defaultWSLPath}",
      "addressSanitizerRuntimeFlags": "detect_leaks=0",
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "False",
          "type": "BOOL"
        },
        {
          "name": "FETCHCONTENT_BASE_DIR",
          "value": "${projectDir}/deps/wsl",
          "type": "PATH"
        },
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "STRING"
        }
      ]
    },
    {
      "name": "Linux via WSL (Debug Shared)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "buildRoot": "${projectDir}/out/wsl-debug-shared/build",
      "installRoot": "${projectDir}/out/wsl-debug-shared/install",
      "cmakeExecutable": "/usr/bin/cmake",
      "cmakeCommandArgs": "",
      "buildCommandArgs": "",
      "ctestCommandArgs": "--verbose",
      "inheritEnvironments": [ "linux_x64" ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "True",
          "type": "BOOL"
        },
        {
          "name": "FETCHCONTENT_BASE_DIR",
          "value": "${projectDir}/deps/wsl",
          "type": "PATH"
        },
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "STRING"
        }
      ],
      "wslPath": "${defaultWSLPath}",
      "addressSanitizerRuntimeFlags": "detect_leaks=0"
    },
    {
      "name": "Clang (Debug Static)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "buildRoot": "${projectDir}/out/clang-debug-static/build",
      "installRoot": "${projectDir}/out/clang-debug-static/install",
      "cmakeCommandArgs": "",
      "buildCommandArgs": "-v",
      "ctestCommandArgs": "--verbose",
      "inheritEnvironments": [ "clang_cl_x64" ],
      "variables": [
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "PATH"
        }
      ]
    }
  ]
}
