{
  "configurations": [
    {
      "name": "Windows (Debug)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [
        "msvc_x64_x64"
      ],
      "buildRoot": "${projectDir}/out/debug/build",
      "installRoot": "${projectDir}/out/debug/root",
      "ctestCommandArgs": "--verbose",
      "environments": [
        {
          "CXXFLAGS": "/W3 /WX"
        }
      ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "ON"
        }
      ]
    },
    {
      "name": "Windows (Debug Static)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [
        "msvc_x64_x64"
      ],
      "buildRoot": "${projectDir}/out/debug-static/build",
      "installRoot": "${projectDir}/out/debug-static/root",
      "ctestCommandArgs": "--verbose",
      "environments": [
        {
          "CXXFLAGS": "/W3 /WX"
        }
      ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "OFF"
        }
      ]
    },
    {
      "name": "Windows (Release)",
      "generator": "Ninja",
      "configurationType": "RelWithDebInfo",
      "inheritEnvironments": [
        "msvc_x64_x64"
      ],
      "buildRoot": "${projectDir}/out/release/build",
      "installRoot": "${projectDir}/out/release/root",
      "ctestCommandArgs": "--verbose",
      "environments": [
        {
          "CXXFLAGS": "/W3 /WX"
        }
      ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "ON"
        }
      ]
    },
    {
      "name": "Windows (Release Static)",
      "generator": "Ninja",
      "configurationType": "RelWithDebInfo",
      "inheritEnvironments": [
        "msvc_x64_x64"
      ],
      "buildRoot": "${projectDir}/out/release-static/build",
      "installRoot": "${projectDir}/out/release-static/root",
      "ctestCommandArgs": "--verbose",
      "environments": [
        {
          "CXXFLAGS": "/W3 /WX"
        }
      ],
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "OFF"
        }
      ]
    },
    {
      "name": "Windows MSBuild (Debug)",
      "generator": "Visual Studio 15 2017 Win64",
      "configurationType": "Debug",
      "inheritEnvironments": [
        "msvc_x64_x64"
      ],
      "buildRoot": "${workspaceRoot}.build/msbuild-debug/build",
      "installRoot": "${workspaceRoot}.build/msbuild-debug/root",
      "ctestCommandArgs": "--verbose",
      "cmakeCommandArgs": "-T v142 -DBUILD_SHARED_LIBS:BOOL=ON"
    },
    {
      "name": "Linux (Debug)",
      "generator": "Ninja",
      "remoteMachineName": "${defaultRemoteMachineName}",
      "configurationType": "Debug",
      "cmakeExecutable": "/usr/bin/cmake",
      "buildRoot": "${projectDir}/out/debug-linux/build",
      "installRoot": "${projectDir}/out/debug-linux/root",
      "remoteCMakeListsRoot": "/var/tmp/src/${projectDirName}/${workspaceHash}/debug-static",
      "remoteBuildRoot": "/var/tmp/build/${projectDirName}/${workspaceHash}/debug-static/build/",
      "remoteInstallRoot": "/var/tmp/build/${projectDirName}/${workspaceHash}/debug-static/install/",
      "remoteCopySources": true,
      "remoteCopySourcesOutputVerbosity": "Normal",
      "remoteCopySourcesConcurrentCopies": "10",
      "remoteCopySourcesMethod": "rsync",
      "remoteCopySourcesExclusionList": [
        ".vs",
        ".git",
        "external/doctest/examples",
        "external/glm/doc",
        "external/stb/tests",
        "external/imgui/examples",
        "external/json/test",
        "external/litexx/external/*/",
        "external/formatxx/external/*/",
        "out"
      ],
      "variables": [
        {
          "name": "CMAKE_CXX_COMPILER",
          "value": "clang++-7"
        },
        {
          "name": "CMAKE_C_COMPILER",
          "value": "clang-7"
        },
        {
          "name": "CMAKE_CXX_FLAGS",
          "value": "-stdlib=libc++ -Wall -Werror"
        }
      ],
      "rsyncCommandArgs": "-t --delete --delete-excluded",
      "remoteCopyBuildOutput": false,
      "ctestCommandArgs": "--verbose",
      "inheritEnvironments": [
        "linux_x64"
      ]
    }
  ]
}
