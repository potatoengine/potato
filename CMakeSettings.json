{
  "environments": [
    {
      "environment": "up_clang",
      "CXXFLAGS": "-Wno-pragma-pack -Wno-deprecated-volatile",
      "UP_CXXFLAGS": "/W3 /WX /FC",
      "UP_OUTPUT_DIR": "${projectDir}/out"
    },
    {
      "environment": "up_msvc",
      "UP_CXXFLAGS": "/W3 /WX /FC",
      "UP_OUTPUT_DIR": "${projectDir}/out"
    },
    {
      "environment": "up_ubuntu",
      "CXXFLAGS": "-Wno-volatile",
      "UP_CXXFLAGS": "-Wall -Werror",
      "UP_OUTPUT_DIR": "${projectDir}/out",
      "CXX": "g++-10",
      "CC": "gcc-10"
    }
  ],
  "configurations": [
    {
      "name": "msvc-debug-shared",
      "description": "MSVC (Debug)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [ "msvc_x64_x64", "up_msvc" ],
      "enableMicrosoftCodeAnalysis": false,
      "enableClangTidyCodeAnalysis": false,
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "YES",
          "type": "BOOL"
        },
        {
          "name": "CMAKE_EXPORT_COMPILE_COMMANDS",
          "value": "ON",
          "type": "BOOL"
        }
      ]
    },
    {
      "name": "msvc-debug-static",
      "description": "MSVC (Debug Static)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [ "msvc_x64_x64", "up_msvc" ],
      "enableMicrosoftCodeAnalysis": false,
      "enableClangTidyCodeAnalysis": false,
      "variables": [
        {
          "name": "CMAKE_EXPORT_COMPILE_COMMANDS",
          "value": "ON",
          "type": "BOOL"
        }
      ]
    },
    {
      "name": "msvc-release-static",
      "description": "MSVC (Release)",
      "generator": "Ninja",
      "configurationType": "RelWithDebInfo",
      "inheritEnvironments": [ "msvc_x64_x64", "up_msvc" ],
      "enableMicrosoftCodeAnalysis": false,
      "enableClangTidyCodeAnalysis": false,
      "variables": [
        {
          "name": "CMAKE_EXPORT_COMPILE_COMMANDS",
          "value": "ON",
          "type": "BOOL"
        }
      ]
    },
    {
      "name": "gcc-debug-static",
      "description": "GCC Ubuntu (Debug Static)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "cmakeExecutable": "/usr/bin/cmake",
      "remoteCopySourcesExclusionList": [ ".vs", ".git", "out" ],
      "inheritEnvironments": [ "linux_x64", "up_ubuntu" ],
      "intelliSenseMode": "linux-gcc-x64",
      "wslPath": "${defaultWSLPath}",
      "addressSanitizerRuntimeFlags": "detect_leaks=0",
      "enableMicrosoftCodeAnalysis": false,
      "enableClangTidyCodeAnalysis": false,
      "variables": [
        {
          "name": "FETCHCONTENT_BASE_DIR",
          "value": "${projectDir}/deps/wsl",
          "type": "PATH"
        },
        {
          "name": "UP_OUTPUT_DIR",
          "value": "${projectDir}/out",
          "type": "PATH"
        }
      ]
    },
    {
      "name": "clang-debug-static",
      "description": "Clang (Debug Static)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [ "clang_cl_x64_x64", "up_clang" ],
      "intelliSenseMode": "windows-clang-x64",
      "enableMicrosoftCodeAnalysis": false,
      "enableClangTidyCodeAnalysis": false,
      "variables": [
        {
          "name": "CMAKE_EXPORT_COMPILE_COMMANDS",
          "value": "ON",
          "type": "BOOL"
        }
      ]
    },
    {
      "name": "clang-debug-shared",
      "description": "Clang (Debug Shared)",
      "generator": "Ninja",
      "configurationType": "Debug",
      "inheritEnvironments": [ "clang_cl_x64_x64", "up_clang" ],
      "intelliSenseMode": "windows-clang-x64",
      "enableMicrosoftCodeAnalysis": false,
      "enableClangTidyCodeAnalysis": false,
      "variables": [
        {
          "name": "BUILD_SHARED_LIBS",
          "value": "YES",
          "type": "BOOL"
        },
        {
          "name": "CMAKE_EXPORT_COMPILE_COMMANDS",
          "value": "ON",
          "type": "BOOL"
        }
      ]
    }
  ]
}
