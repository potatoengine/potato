{
  "version": "0.2.1",
  "tasks": [
    {
      "taskName": "Convert Resources (Debug)",
      "appliesTo": "/",
      "type": "default",
      "command": "${workspaceRoot}/out/debug/build/bin/recon.exe",
      "args": [
        "-source",
        "${workspaceRoot}/resources",
        "-dest",
        "${workspaceRoot}/out/resources",
        "-cache",
        "${workspaceRoot}/out/cache"
      ]
    },
    {
      "taskName": "Convert Resources (Release)",
      "appliesTo": "/",
      "type": "default",
      "command": "${workspaceRoot}/out/release/build/bin/recon.exe",
      "args": [
        "-source",
        "${workspaceRoot}/resources",
        "-dest",
        "${workspaceRoot}/out/resources",
        "-cache",
        "${workspaceRoot}/out/cache"
      ]
    }
  ]
}
