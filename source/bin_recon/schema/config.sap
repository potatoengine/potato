module config;

attribute required { bool required = true; }
attribute cxxname { string id; }
attribute json { string name; }
attribute serialize {}

[serialize]
struct ImportMapping {
    [required]
    string pattern;
    [required]
    string importer;
}

[serialize]
struct Config {
    [required, cxxname("sourceFolderPath"), json("sourceDir")]
    string source_dir;
    ImportMapping[] mapping;
}
